{
	"version": "2.0.0",
	"windows": {
		"options": {
		  "shell": {
			"executable": "cmd.exe",
			"args": [
			  "/C",
			  // The path to VsDevCmd.bat depends on the version of Visual Studio you have installed.
			  "\"D:/Software/VisualStudio/Common7/Tools/VsDevCmd.bat\"",
			  "&&"
			]
		  }
		}
	  },
	"tasks": [
		{			
			"type": "shell",
			"label": "Setup output directory",

			"windows": {
				"command": "cmd",
				"args": [
					"/C", 
					"if not exist .\\bin mkdir .\\bin",
					"if not exist .\\bin\\release mkdir .\\bin\\release",
					"if not exist .\\bin\\debug mkdir .\\bin\\debug"
				],
			},
			"group": "build",
			"detail": "cmd create output directory"
		},
		{
			"type": "shell",
			"label": "C/C++: cl.exe build release",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/W2",
				"/EHsc",
				"/nologo",
				"/O2",
				"/sdl",
				"/Oi",
				"/Gy",
				"/GS",
				"/GL",
				"/FS",
				"/Gm-",
				"/Fe:",
				"${workspaceFolder}\\bin\\Release\\${fileBasenameNoExtension}.exe",
				"/Fd:",
				"${workspaceFolder}\\bin\\Release\\",
				"/Fo:",
				"${workspaceFolder}\\bin\\Release\\",
				"${file}"
			],
			"presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "compiler: cl.exe"
		},
		{
			"type": "shell",
			"label": "C/C++: cl.exe build Debug",
			"command": "cl.exe",
			"args": [
				"/ZI",
				"/W2",
				"/EHsc",
				"/nologo",
				"/Od",
				"/sdl",
				"/GS",
				"/FS",
				"/Fe:",
				"${workspaceFolder}\\bin\\Debug\\${fileBasenameNoExtension}.exe",
				"/Fd:",
				"${workspaceFolder}\\bin\\Debug\\",
				"/Fo:",
				"${workspaceFolder}\\bin\\Debug\\",
				"${file}"
			],
			"presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "compiler: cl.exe"
		}
	]
}